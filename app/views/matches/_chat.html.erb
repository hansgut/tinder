<div class="flex flex-col h-full p-6" data-controller="messages" id="messageContainer">
  <div
    class="flex flex-col flex-auto flex-shrink-0 rounded-2xl bg-gray-100 h-full p-4"
  >
    <div class="flex flex-col  h-full overflow-x-auto mb-4" id="scroll-chat">
      <div class="flex flex-col h-full">
        <div class="grid grid-cols-12 gap-y-2" id="messages">
          <% if @match.present? %>
            <%= turbo_stream_from @match %>
            <%= render @match.messages.order(id: :asc) %>
          <% end %>
        </div>
      </div>
    </div>
    <%= render "messages/form" if @match.present? %>
  </div>
</div>


