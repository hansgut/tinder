<!-- component -->
<div class="flex h-screen antialiased text-gray-800">
  <div class="flex flex-row h-4/5 w-full overflow-x-hidden">
    <div class="flex flex-col py-8 pl-6 pr-2 w-64 bg-white flex-shrink-0">
      <div class="flex flex-col">
        <div class="flex flex-row items-center justify-between text-xs">
          <span class="font-bold">Active Conversations</span>
          <span
            class="flex items-center justify-center bg-gray-300 h-4 w-4 rounded-full"
          ><%= @pairs.count %></span
          >
        </div>
        <div class="flex flex-col space-y-1 mt-4 -mx-2 h-auto overflow-y-auto">
          <% @matches.each do |match| %>
            <%= link_to match_path(match), class: "flex flex-row items-center #{"hover:" unless @match == match}bg-gray-200 rounded-xl p-2" do %>
              <div
                class="flex items-center justify-center h-8 w-8 bg-indigo-200 rounded-full"
              >
                <%= image_tag match.pair_profile(@profile_id).photo.file, class: "h-8 w-8 rounded-full" %>
              </div>
              <div class="ml-2 text-sm font-semibold"><%= match.pair_profile(@profile_id).full_name %></div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <%= render "chat" if @match.present? %>
  </div>
</div>

