<div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 shadow rounded bg-white card" data-controller="choice">
  <div class="flex justify-center items-center h-96 bg-gray-400">
    <%= image_tag profile.photo.file, class: "object-cover w-80 h-full" %>
    <%= hidden_field_tag :profile_id, profile.id, class: "profile-id" %>
  </div>
  <div class="p-4">
    <h3 class="text-lg font-semibold text-gray-800"><%= profile.full_name %></h3>
    <p class="mt-2 text-gray-600"><%= profile.description %></p>
    <div class="flex justify-between mt-4">
      <button class="px-4 py-2 bg-green-300 text-gray-700 rounded-md hover:bg-gray-400 focus:outline-none focus:bg-gray-400" data-action="click->choice#like">Like</button>
      <button class="px-4 py-2 bg-red-300 text-gray-700 rounded-md hover:bg-gray-400 focus:outline-none focus:bg-gray-400" data-action="click->choice#dislike">Dislike</button>
    </div>
  </div>
</div>

